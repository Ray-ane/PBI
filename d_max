FlagMeasure =
VAR currentValue = [Assets Value]
VAR maxPositive =
    MAXX(
        FILTER(
            ALL('Assets'[asset]),
            CALCULATE([Assets Value]) > 0
        ),
        CALCULATE([Assets Value])
    )
VAR minNegative =
    MINX(
        FILTER(
            ALL('Assets'[asset]),
            CALCULATE([Assets Value]) < 0
        ),
        CALCULATE([Assets Value])
    )
RETURN
    IF(
        currentValue = maxPositive || currentValue = minNegative,
        1,
        0
    )
