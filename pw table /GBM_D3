/* Style for WebKit-based browsers (Chrome, Safari, etc.) */
input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 20px;
  width: 20px;
  background: black;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  margin-top: -8px;  /* Adjust this value to vertically center the thumb on the track */
}

/* Style for Mozilla Firefox */
input[type="range"]::-moz-range-thumb {
  height: 20px;
  width: 20px;
  background: black;
  border: none;
  border-radius: 50%;
  cursor: pointer;
}

/* Style for Internet Explorer and Edge */
input[type="range"]::-ms-thumb {
  height: 20px;
  width: 20px;
  background: black;
  border: none;
  border-radius: 50%;
  cursor: pointer;
}
