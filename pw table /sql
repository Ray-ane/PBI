Environment,Server,Database,Username,Password
DEV,SalDev,YourDevDatabase,YourDevSQLUser,YourDevSQLPassword
PROD,SalProd,YourProdDatabase,YourProdSQLUser,YourProdSQLPassword


# Set the target environment. Change this value to "DEV" or "PROD" as needed.
$targetEnv = "DEV"

# Define the path to the CSV file containing connection parameters.
$csvPath = "C:\Path\To\connectionParameters.csv"

# Import the CSV file.
$connectionParams = Import-Csv -Path $csvPath

# Retrieve connection parameters for the specified environment.
$envParams = $connectionParams | Where-Object { $_.Environment -eq $targetEnv }

if (-not $envParams) {
    Write-Error "No connection parameters found for environment: $targetEnv"
    exit
}

# Assign the connection parameters.
$server   = $envParams.Server
$database = $envParams.Database
$username = $envParams.Username
$password = $envParams.Password

